#include <avr/io.h>
#include <avr/interrupt.h>



/* Polecenie 1

ISR(TIMER1_COMPA_vect)
{
	if(!(PIND&(1<<6)))
	{
		if(PORTC == 0)
			PORTC = 0xFF;
		else
			PORTC = 0;
	}
}
 END
 */

ISR(TIMER1_COMPA_vect)
{
	PORTD = 0b00000001;
	PORTC = j;
	PORTD = 0b00000010;
	PORTC = d;
	PORTD = 0b00000011;
	PORTC = s;
	PORTD = 0b00000100;
	PORTC = t;
}


int main()
{
/* Polecenie 1
	DDRC = 0xFF;
	DDRD = 0;
	PORTD = 0xFF;
	TCCR1B |= (1<<3) | (1<<1) | (1<<0); //Ustalanie licznika
	OCR1A = 17280;
	TIMSK |= (1<<4);
	sei();
	PORTC = 0;

	while(1){}
	END
	*/


	uint8_t digits_7seg[] = {0x3f,0x06,0x5b,0x4f,0x66,0x6d,0x7d,0x07,0x7f,0x6f};
	DDRC = 0xFF;
	DDRD = 0xFF;
	TCCR1B |= (1<<3) | (1<<2); //Ustalanie licznika
	OCR1A = 86;
	TIMSK |= (1<<4);
	sei();
	int liczba = 2222;
	volatile int j = digits_7seg[liczba%10];
	liczba /= 10;
	volatile int d = digits_7seg[liczba%10];
	liczba /= 10;
	volatile int s = digits_7seg[liczba%10];
	liczba /= 10;
	volatile int t = digits_7seg[liczba%10];
	liczba /= 10;

	while(1){}

}
